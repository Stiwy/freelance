{% set uri = app.request.requestUri|split('/') %}

<div class="bg-gray-700 h-screen w-1/5 shadow-xl fixed">
    <h1 class="text-3xl text-center font-black tracking-wide text-green-500 my-5">Freelancer</h1>

    <nav class="w-3/4 mx-auto text-white mt-20">
        <ul>
            <li class="{% if(uri.1 == 'tableau_de_bord') %} active {% endif %} my-2 py-2 px-3 rounded hover:text-green-500 cursor-pointer">
                <a class="text-lg" href="{{ path('app_home') }}"><i class="fas fa-user"></i> Tableau de bord</a>
            </li>
            <li class="{% if(uri.1 == 'clients') %} active {% endif %} my-2 py-2 px-3 rounded hover:text-green-500 cursor-pointer">
                <a class="text-lg" href="{{ path('app_customer') }}"><i class="fas fa-user"></i> Clients</a>
            </li>
            <li class="{% if(uri.1 == 'missions') %} active {% endif %} my-2 py-2 px-3 rounded hover:text-green-500 cursor-pointer">
                <a class="text-lg"  href="{{ path('app_mission') }}"><i class="fas fa-file-signature"></i> Missions</a>
            </li>
            <li class="{% if(uri.1 == 'collaborateurs') %} active {% endif %} my-2 py-2 px-3 rounded hover:text-green-500 cursor-pointer">
                <a class="text-lg"><i class="fas fa-user-tie"></i> Collaborateurs</a>
            </li>
            <li class="{% if(uri.1 == 'taches') %} active {% endif %} my-2 py-2 px-3 rounded hover:text-green-500 cursor-pointer">
                <a class="text-lg"><i class="fas fa-tasks"></i> Tâches</a>
            </li>
            <li class="{% if(uri.1 == 'agenda') %} active {% endif %} my-2 py-2 px-3 rounded hover:text-green-500 cursor-pointer">
                <a class="text-lg"><i class="fas fa-calendar-alt"></i> Agenda</a>
            </li>
            <li class="{% if(uri.1 == 'factures') %} active {% endif %} my-2 py-2 px-3 rounded hover:text-green-500 cursor-pointer">
                <a class="text-lg"><i class="fas fa-file-invoice"></i> Factures</a>
            </li>
            <li class="{% if(uri.1 == 'comptabilite') %} active {% endif %} my-2 py-2 px-3 rounded hover:text-green-500 cursor-pointer">
                <a class="text-lg"><i class="fas fa-calculator"></i> Comptabilité</a>
            </li>
        </ul>
    </nav>

    <div class="absolute bottom-2 w-full">
        <div class="text-gray-300 px-3">
            <a href="{{ path('app_account') }}" class="hover:text-green-500 cursor-pointer"><i class="fas fa-user-circle"></i> Mon compte</a>
            <a href="{{ path('app_logout') }}" class="float-right hover:text-green-500 cursor-pointer"><i class="fas fa-sign-out-alt"></i> Déconnexion</a>
        </div>
    </div>
</div>