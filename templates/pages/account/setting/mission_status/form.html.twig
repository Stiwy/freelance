{% extends 'layouts/connected.html.twig' %}

{% block title %}Mes clients{% endblock %}

{% block body %}

    <section class="w-4/5 min-h-screen">
        <header class="bg-gray-800 text-white p-3 flex content-between">
            <h2 class="text-xl tracking-wide text-gray-400 w-8/12">Mon compte > Mes paramètre > Créer un status de mission</h2>
        </header>

        <div class="flex content-between px-5 pt-20">
            <h2 class="block w-4/5 font-black text-4xl text-gray-400">Créer un status de missions</h2>
            <a class="block w-1/5 bg-gray-700 hover:bg-gray-600 text-white p-1 rounded text-lg text-center" href="{{ path('app_setting') }}">Retour</a>
        </div>

        <div class="w-3/5 mx-auto px-5 my-20 bg-white p-2 shadow-lg border-2 borger-gray-200 rounded-md">
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.status) }}
                    {{ form_widget(form.status) }}
                </div>

                <div class="grid grid-flow-col gap-2">
                    <div>
                        <div class="form-group">
                            {{ form_label(form.background_color) }}
                            {{ form_widget(form.background_color) }}
                        </div>
                    </div>

                    <div>
                        <div class="form-group">
                            {{ form_label(form.font_color) }}
                            {{ form_widget(form.font_color) }}
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.priority) }}
                    {{ form_widget(form.priority) }}
                </div>
            {{ form_end(form) }}
        </div>
    </section>

    <script>

        toggleClassForm('mission_status_status');
        toggleClassForm('mission_status_priority');

        function addClassForm(idInput)
        {
            let idLabel = idInput+'Label';
            let input = document.getElementById(idInput);
            let label = document.getElementById(idLabel);

            input.classList.add('input-focus');
            label.classList.add('input-focus-label');
        }

        function toggleClassForm(idInput)
        {
            let idLabel = idInput+'Label';
            let input = document.getElementById(idInput);
            let label = document.getElementById(idLabel);

            if (input.value == "") {
                input.classList.remove('input-focus');
                label.classList.remove('input-focus-label');
            } else {
                input.classList.add('input-focus');
                label.classList.add('input-focus-label');
            }
        }
    </script>
{% endblock %}
